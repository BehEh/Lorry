{% extends 'email/base.twig' %}

{% block subject %}{% trans %}{{brand}}: Confirm your (new) email address{% endtrans %}{% endblock %}

{% set url = '<a href="' ~ url ~ '">' ~ url ~ '</a>' %}

{% block body %}
<p>{% trans %}You set your email address to {{email}}.{% endtrans %}</p>

<p>{% trans %}To use all features of {{brand}} you need to activate this new address.{% endtrans %}<br>
{% trans %}Please open {{url}} to activate your address.{% endtrans %}</p>

{% endblock %}