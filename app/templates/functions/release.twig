{% set _release_url %}
	{{base}}/addons/{{release.addon.game.short}}/{{release.addon.short}}/{{release.version}}
{% endset %}
<li class="media media-addon">
	<a href="{{_release_url}}" class="pull-left">
		{% include 'functions/svg/addon.twig' %}
	</a>
	<div class="media-body">
		<h4 class="media-heading"><a href="{{_release_url}}">{{ release.addon.title }}{% if release.version %} {% include 'functions/labels/version.twig' with {'version' : release.version} %}{% endif %}</a>
		{% if release.addon.game %}{% include 'functions/tags/game.twig' with {'game' : release.addon.game} %}{% endif %}
		</h4>
		<p>{{release.addon.introduction}}</p>
	</div>
</li>
