{% if user.name %}
{% if not nolink %}<a href="{{base}}/users/{{user.name}}">{% endif %}<strong>{{user.name}}</strong>{% if not nolink %}</a>{% endif %}
{% if user.administrator %} <span class="label label-success">{% trans %}Administrator{% endtrans %}</span>
{% elseif user.moderator %} <span class="label label-primary">{% trans %}Moderator{% endtrans %}</span>{% endif %}
{% else %}
{% trans %}Invalid user{% endtrans %}
{% endif %}
