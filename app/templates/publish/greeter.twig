{% extends 'root.twig' %}

{% set title = 'Publish'|trans %}

{% block content %}
<div class="container">
	<div class="page-header">
		<h1>{{ title }} <small>{{version}}</small></h1>
	</div>
</div>
<div class="jumbotron">
	<div class="container">
		<h2>{% trans %}This is the publishing portal{% endtrans %}</h2>
		<p>{% trans %}After registering you can easily publish your addons here and distribute them via Lorry.{% endtrans %}</p>
		<p>
			<a href="{{base}}/register?returnto={{origpath}}" class="btn btn-lg btn-success" data-instant>{% trans %}Register now{% endtrans %}</a>
			<a href="{{base}}/login?returnto={{origpath}}" class="btn btn-lg btn-primary" data-instant>{% trans %}Login{% endtrans %}</a>
		</p>
	</div>
</div>
{% endblock %}