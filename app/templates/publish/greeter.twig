{% extends 'root.twig' %}

{% set title = 'Publish'|trans %}

{% block content %}
	<div class="page-header">
		<div class="container">
			<h1>{{title}}</h1>
		</div>
	</div>
	<div class="jumbotron">
		<div class="container">
			<h2>{% trans %}Would you like to show the world what you built?{% endtrans %}</h2>
			<p>{% trans %}Great! After registering you can create your addons here and publish them on Lorry.{% endtrans %}</p>
			<p>
				<a href="{{base}}/register?returnto={{origpath}}" class="btn btn-lg btn-success">{% trans %}Register now{% endtrans %}</a>
				<a href="{{base}}/login?returnto={{origpath}}" class="btn btn-lg btn-primary">{% trans %}Login{% endtrans %}</a>
			</p>
		</div>
	</div>
</div>
{% endblock %}