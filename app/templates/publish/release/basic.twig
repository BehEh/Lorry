<form role="form" method="post" action="{{filename}}#basic">
	{% include 'functions/alert.twig' with {'selector' : 'basic'} %}
	<input type="hidden" name="basic-form">
	<input type="hidden" name="state" value="{{state}}">
	<div class="row">
		<div class="col-md-4">
			<div class="form-group">
				<label for="version">{% trans %}Version{% endtrans %}</label>
				<input type="text" class="form-control" name="version" id="version" value="{{new_version}}" required{% if published %} disabled{% endif %}>
			</div>
		</div>
		<div class="col-md-4">
			</div>
		<div class="col-md-4">
			<div class="form-group">
				<label for="version">{% trans %}Remove{% endtrans %}</label>
				<p><a href="#remove-release" data-toggle="collapse" data-target="#remove-release">{% trans %}Would you like to remove this release?{% endtrans %}</a></p>
				<div id="remove-release" class="collapse">
					<div class="alert alert-warning files-some">
						{% trans %}All uploaded files will be deleted.{% endtrans %}
					</div>
					<button type="submit" name="release-remove" class="btn btn-danger">{% trans "Remove release" %}</button>
				</div>
			</div>
		</div>
	</div>
	<div class="form-group">
		<div class="checkbox">
			<label>
				<input type="checkbox" id="archive-confirm" name="archive-confirm" {% if initial or archive_confirm %} checked{% endif %}{% if published %} disabled{% endif %}> {% trans %}This release was already published somewhere else{% endtrans %}
			</label>
		</div>
	</div>
	<div id="archive">
		<div class="row">
			<div class="col-md-4">
				<div class="form-group">
					<label for="initial">{% trans %}Original publishing date{% endtrans %}</label>
					<input type="date" class="form-control" id="initial" name="initial" placeholder="{{date}}" value="{{initial}}"{% if initial %} required{% endif %}{% if published %} disabled{% endif %}>
				</div>
			</div>
		</div>
	</div>
	{% if published %}
	<p class="help-block">{% trans %}These settings cannot be changed anymore.{% endtrans %}</p>
	{% else %}
	<div class="form-group">
		<p class="help-block">{% trans %}These settings cannot be changed once the release has been published.{% endtrans %}</p>
		<button type="submit" class="btn btn-primary">{% trans "Save" %}</button>
	</div>
	{% endif %}
</form>
