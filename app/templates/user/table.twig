{% extends 'root.twig' %}

{% set title = 'Users'|trans %}

{% block content %}
<div class="container">
	<div class="page-header">
		<h1>{{ title }}</h1>
	</div>
	{% if users %}
	<div class="table-responsive">
		<table class="table">
			<thead>
				<tr><th>{% trans "Username" %}</th></tr>
			</thead>
			<tbody>
		{% for user in users %}
			<tr><td><a href="{{filename}}/{{user}}"><strong>{{ user }}</strong></a></td></tr>
		{% endfor %}
			</tbody>
		</table>
	</div>
</div>
	{% else %}
</div>
<div class="jumbotron">
	<div class="container">
		<h1>{% trans %}No matching users{% endtrans %}</h1>
		<p>{% trans %}No user currently matches your filtering critera.{% endtrans %}</p>
	</div>
</div>
	{% endif %}
{% endblock %}