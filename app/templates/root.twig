<!doctype html>
<html lang="{% trans "en" %}">
	<head lang="{% trans "en" %}">
		<meta charset="utf-8">
		<title>{{title|default(brand)}}</title>
		<meta name="description" content="">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
		<link rel="shortcut icon" href="{{base}}/img/favicon.ico" type="image/x-icon">
		<link href="{{base}}/css/bootstrap.min.css" rel="stylesheet">
		<link href="{{base}}/css/lorry.min.css" rel="stylesheet">
		<meta property="og:title" content="{{title|default(brand)}}">
		<meta property="og:image" content="{{base}}/img/logo.png">
		<meta property="og:site_name" content="{{brand}}">
	</head>
	<body>{% block body %}
		{% include 'functions/navbar.twig' %}
		{% if site_notice %}
		<div id="site-notice" class="jumbotron alert-danger">
			<div class="container">		
		{{site_notice}}
			</div>
		</div>
		{% endif %}
		{% block content %}
		<div class="container">
		</div>
		{% endblock %}
		<div class="container">
			<footer>
				<p class="visible-xs">&uarr; <a href="#">{% trans %}Back to top{% endtrans %}</a></p>
				<p><a class="text" href="{{base}}">{{brand}}</a> {{site_copyright}}<span class="muted"> · <a class="text" href="{{base}}/about">{% trans "About us" %}</a> · <a class="text" href="{{base}}/contact"><span>{% trans "Contact" %}</span></a></span></p>
			</footer>
		</div>
	{% endblock %}
		<script src="{{base}}/js/jquery.min.js"></script>
		<script src="{{base}}/js/bootstrap.min.js"></script>
		<script src="{{base}}/js/lorry.js"></script>
		<script>{% block javascript %}{% endblock %}</script>
		<script>(function() {
				if ("-ms-user-select" in document.documentElement.style && navigator.userAgent.match(/IEMobile\/10\.0/)) {
					var msViewportStyle = document.createElement("style");
					msViewportStyle.appendChild(
							document.createTextNode("@-ms-viewport{width:auto!important}")
							);
					document.getElementsByTagName("head")[0].appendChild(msViewportStyle);
				}
			})();
		</script>
	</body>
</html>